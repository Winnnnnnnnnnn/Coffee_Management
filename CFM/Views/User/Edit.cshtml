@model MyLibrary.DataAccess.User

<section class="row justify-content-center align-items-center">
    <div class="col-7">
        <div class="container mx-5 p-3">
            <h3 class="fw-bold">Cập nhật khoản</h3>
            <hr>
            <form asp-action="Edit" method="post" id="user-form" class="save-form">
                <div class="p-5">
                    <div class="row">
                        <input type="hidden" asp-for="Id">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên tài khoản</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Nhập tên tài khoản">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label fw-bold">Nhóm quyền</label>
                            <input type="text" class="form-control" asp-for="Role" placeholder="Chọn nhóm quyền">
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input type="text" class="form-control" asp-for="Email" placeholder="Nhập email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-bold">Số điện thoại</label>
                            <input type="text" class="form-control" asp-for="Phone" placeholder="Nhập số điện thoại">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end me-5 mb-3">
                        <button type="submit" id="user-submit" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
