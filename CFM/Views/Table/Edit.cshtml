@model MyLibrary.DataAccess.Table

@{
    ViewData["Title"] = "Cập nhật bàn";
}

<section class="row justify-content-center align-items-center">
    <div class="col-7">
        <div class="container card me-5 p-5 shadow-lg">
            <h3 class="fw-bold">Cập nhật bàn</h3>
            <hr>
            <form asp-controller="Table" asp-action="Edit" method="post" id="table-form" class="save-form"
                accept-charset="UTF-8" enctype="multipart/form-data">
                <div class="p-5">
                    <div class="row">
                        <input type="hidden" asp-for="Id">
                        <span asp-validation-for="Id" class="text-danger"></span>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên bàn</label>
                            <input required type="text" class="form-control" asp-for="Name" placeholder="Nhập tên bàn">
                            <span asp-validation-for="Name" class="text-danger"></span> 
                        </div>
                        <div class="mb-3">
                            <label asp-for="Area" class="form-label fw-bold">Khu vực</label>
                            <input type="text" class="form-control" asp-for="Area" placeholder="Nhập khu vực">
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Note" class="form-label fw-bold">Ghi chú</label>
                            <input type="text" class="form-control" asp-for="Note" placeholder="Nhập ghi chú">
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                        <input asp-for="Status" type="hidden">
                    </div>
                    <div class="row mt-3">
                        <div class="col-6 d-flex justify-content-start">
                            <a asp-action="Index" class="btn btn-outline-primary border border-0"><i
                                    class="bi bi-arrow-left-circle h2"></i></a>
                        </div>
                        <div class="col-6 d-flex justify-content-end align-items-center">
                            <button type="submit" class="btn btn-primary fw-bold py-2">Xác
                                nhận</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
    </script>
}
