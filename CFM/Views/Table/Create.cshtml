@model MyLibrary.DataAccess.Table

<section class="row justify-content-center align-items-center">
    <div class="col-7">
        <div class="container mx-5 p-3">
            <h3 class="fw-bold">Tạo bàn</h3>
            <hr>
            <form asp-action="Create" method="post" id="user-form" class="save-form">
                <div class="p-5">
                    <div class="row">
                        <input type="hidden" asp-for="Id" value="0">
                        <span asp-validation-for="Id" class="text-danger"></span>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên bàn</label>
                            <input required type="text" class="form-control" asp-for="Name" placeholder="Nhập tên bàn">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Area" class="form-label fw-bold">Khu vực</label>
                            <input type="text" class="form-control" asp-for="Area" placeholder="Nhập khu vực">
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Note" class="form-label fw-bold">Note</label>
                            <input type="text" class="form-control" asp-for="Note" placeholder="Nhập ghi chú">
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                        <div class="d-flex">
                            <label for="status" class="form-label fw-bold">Trạng thái</label>
                            <div class="form-check form-switch p-0">
                                <input style="margin-left: 15px" id="status" class="form-check-input" type="checkbox"
                                    onchange="updateHiddenStatus()">
                                <input asp-for="Status" type="hidden" />
                            </div>
                        </div>


                    </div>
                    <div class="d-flex justify-content-end mb-3">
                        <button type="submit" class="btn btn-success mx-3">Tạo</button>
                        <button type="reset" class="btn btn-primary">Cacel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateHiddenStatus() {
            var statusCheckbox = document.getElementById("status");
            var hiddenStatus = document.getElementById("Status");
            hiddenStatus.value = statusCheckbox.checked ? 1 : 0;
        }
    </script>
}
