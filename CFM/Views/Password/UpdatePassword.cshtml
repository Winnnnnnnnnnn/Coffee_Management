@model MyLibrary.DataAccess.User
@{
    ViewData["Title"] = "UpdatePassword";
}

<h1 style="text-align: center">Forget Password</h1>

<form asp-action="UpdatePassword" method="Post" class="container mt-3">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="form-group">
                <input type="email" value="@ViewData["Message"]" name="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input required type="Password" class="form-control" name="password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input required type="password" class="form-control" name="confirmPassword" required>
            </div>
            <span style="color: red;">@ViewData["Password"]</span>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group">
            <button type="submit" class="btn btn-outline-success btn-update-password">Submit</button>
            <a asp-controller="Login" asp-action="Index" class="btn btn-outline-primary">Back to login</a>
        </div>
    </div>
</form>
<hr class="mt-3">

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
