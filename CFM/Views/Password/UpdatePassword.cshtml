@model MyLibrary.DataAccess.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CFM - Cập nhật mật khẩu</title>

    @* Bootstrap *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
</head>

<body>
    <form asp-action="UpdatePassword" method="Post" class="container mt-5">
        <div class="row justify-content-center align-items-center mt-5">
            <div class="col-10 col-lg-6 bg-light rounded-3 px-5 mb-4">
                <h1 style="text-align: center">Cập nhật mật khẩu</h1>
                <div class="form-group">
                    <input type="email" value="@ViewData["Message"]" name="email" name="email"
                        class="form-control d-none">
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="fw-bold mb-2">Mật khẩu mới</label>
                    <input type="Password" id="password" name="password" class="form-control"
                        placeholder="Nhập mật khẩu mới" >
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="password" class="fw-bold mb-2">Xác nhận lại mật khẩu</label>
                    <input  type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                        placeholder="Xác nhận lại mật khẩu" >
                </div>
                <span style="color: red;">@ViewData["Password"]</span>
                <div class="row my-3">
                    <div class="col-6 text-start">
                        <a asp-controller="Password" asp-action="ForgotPassword" class="h2 text-primary"><i
                                class="bi bi-arrow-left-circle"></i></a>
                    </div>
                    <div class="col-6 text-end"><input type="submit" value="Thay đổi"
                            class="btn btn-primary btn-update-password fw-bold px-4">
                    </div>
                </div>
            </div>
        </div>
    </form>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>