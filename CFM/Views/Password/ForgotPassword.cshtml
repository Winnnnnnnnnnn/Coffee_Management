@model MyLibrary.DataAccess.User
@{
    ViewData["Title"] = "ForgetPassword";
}

<h1 style="text-align: center">Forget Password</h1>

<form asp-action="ForgotPassword" method="Post" class="container mt-3">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
                <span style="color: red;">@ViewData["Null"]</span>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-outline-success">
            <a asp-controller="Login" asp-action="Index" class="btn btn-outline-primary">Back to login</a>
        </div>
    </div>
</form>

<hr class="mt-3">

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
