@model MyLibrary.DataAccess.Product

<section class="row justify-content-center align-items-center">
    <div class="col-7">
        <div class="container mx-5 p-3">
            <h3 class="fw-bold">Thêm sản phẩm mới</h3>
            <hr>
            <form asp-action="Create" method="post" id="product-form" class="save-form" accept-charset="UTF-8">
                <div class="p-5">
                    <div class="row">
                        <input type="hidden" asp-for="Id" value="0">
                            <span asp-validation-for="Id" class="text-danger"></span>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên sản phẩm</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Nhập tên sản phẩm">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Unit" class="form-label fw-bold">Đơn vị tính</label>
                            <input type="text" class="form-control" asp-for="Unit" placeholder="Nhập đơn vị tính">
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold">Giá</label>
                            <input type="text" class="form-control" asp-for="Price" placeholder="Nhập giá">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CatalogueId" class="form-label fw-bold">Danh mục</label>
                            <input type="text" class="form-control" asp-for="CatalogueId" placeholder="Nhập danh mục">
                            <span asp-validation-for="CatalogueId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end me-5 mb-3">
                        <button type="submit" id="product-submit" class="btn btn-primary">Tạo</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
